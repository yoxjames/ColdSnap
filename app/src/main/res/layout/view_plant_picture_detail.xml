<?xml version="1.0" encoding="utf-8"?>
<com.yoxjames.coldsnap.ui.plantimage.PlantProfileImageView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ppiv_plant_profile_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_plant_profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/photo_background"/>

    <ImageButton
        android:id="@+id/ib_take_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="8dp"
        android:clickable="false"
        android:src="@drawable/ic_baseline_camera_24px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/ib_delete_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="8dp"
        android:clickable="false"
        android:src="@drawable/ic_delete_black_24dp"
        app:layout_constraintBottom_toTopOf="@id/ib_take_photo"
        app:layout_constraintEnd_toEndOf="parent" />

</com.yoxjames.coldsnap.ui.plantimage.PlantProfileImageView>